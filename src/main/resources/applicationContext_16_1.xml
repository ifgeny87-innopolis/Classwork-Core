<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- 1. Большой бин -->
    <bean id="dataHandler1" class="ru.innolearn.day16.handlers.DataHandler" scope="singleton">
        <constructor-arg name="downloader" ref="fdownloader"/>
        <constructor-arg name="uploader" ref="fuploader"/>
        <property name="downloader" ref="fdownloader"/>
        <property name="uploader" ref="fuploader"/>
    </bean>

    <bean id="fuploader" class="ru.innolearn.day16.io.FileUploader"/>
    <bean id="fdownloader" class="ru.innolearn.day16.io.FileDownloader"/>
</beans>

